	<append xpath="/rwgmixer/district[@name='countryresidential']">
		<property name="avoided_neighbor_districts" value="downtown,commercial,industrial"/>
	</append>
	
	<append xpath="/rwgmixer/district[@name='rural']">
		<property name="avoided_neighbor_districts" value="downtown,commercial,industrial,residential,oldwest"/>
	</append>
	
	<append xpath="/rwgmixer/township[@name='countrytown']">
		<property name="outskirt_district" value="rural"/>
	</append>

	<append xpath="/rwgmixer/township[@name='city']">
		<property name="spawn_trader" value="true"/>
	</append>
	
	<append xpath="/rwgmixer/district[@name='downtown']">
